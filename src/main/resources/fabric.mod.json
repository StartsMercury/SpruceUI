{
  "schemaVersion": 1,
  "id": "spruceui",
  "name": "SpruceUI",
  "version": "${version}",
  "description": "Just a GUI library. (Unofficial 1.20 Fork by StartsMercury)",
  "authors": [
    "LambdAurora"
  ],
  "contact": {
    "homepage": "https://github.com/StartsMercury/SpruceUI",
    "sources": "https://github.com/StartsMercury/SpruceUI.git",
    "issues": "https://github.com/StartsMercury/SpruceUI/issues"
  },
  "license": "MIT",
  "icon": "assets/spruceui/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "dev.lambdaurora.spruceui.hud.HudManager::initialize"
    ]
  },
  "mixins": [
    "spruceui.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric-api-base": "*",
    "fabric-lifecycle-events-v1": "*",
    "fabric-rendering-v1": "*",
    "fabric-resource-loader-v0": ">=0.4.7",
    "minecraft": ">=1.20",
    "java": ">=17"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ]
    }
  }
}
